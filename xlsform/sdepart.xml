<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Departure</h:title>
    <model>
      <instance>
        <sdepart id="sdepart">
          <start/>
          <end/>
          <deviceid/>
          <simserial/>
          <person/>
          <region/>
          <facility/>
          <srepeat jr:template="">
            <stid/>
            <stype/>
            <condition/>
          </srepeat>
          <store_gps/>
          <meta>
            <instanceID/>
          </meta>
        </sdepart>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/sdepart/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/sdepart/end" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/sdepart/deviceid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="simserial" nodeset="/sdepart/simserial" type="string"/>
      <bind nodeset="/sdepart/person" required="true()" type="select1"/>
      <bind nodeset="/sdepart/region" required="true()" type="select1"/>
      <bind nodeset="/sdepart/facility" required="true()" type="select1"/>
      <bind nodeset="/sdepart/srepeat/stid" required="true()" type="barcode"/>
      <bind nodeset="/sdepart/srepeat/stype" required="true()" type="select1"/>
      <bind nodeset="/sdepart/srepeat/condition" required="true()" type="select1"/>
      <bind nodeset="/sdepart/store_gps" required="true()" type="geopoint"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/sdepart/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 appearance="quick search('riders')" ref="/sdepart/person">
      <label>Rider Name</label>
      <item>
        <label>rider</label>
        <value>rider_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('regions')" ref="/sdepart/region">
      <label>Region</label>
      <item>
        <label>region</label>
        <value>region_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('facilities', 'matches', 'region',  /sdepart/region )" ref="/sdepart/facility">
      <label>Facility</label>
      <item>
        <label>facility</label>
        <value>facility_key</value>
      </item>
    </select1>
    <group ref="/sdepart/srepeat">
      <label>New Sample</label>
      <repeat nodeset="/sdepart/srepeat">
        <input ref="/sdepart/srepeat/stid">
          <label>ST Barcode</label>
        </input>
        <select1 appearance="quick search('stypes')" ref="/sdepart/srepeat/stype">
          <label>Specimen Type</label>
          <item>
            <label>stype</label>
            <value>stype_key</value>
          </item>
        </select1>
        <select1 appearance="quick search('conditions')" ref="/sdepart/srepeat/condition">
          <label>Specimen Condition</label>
          <item>
            <label>cond</label>
            <value>cond_key</value>
          </item>
        </select1>
      </repeat>
    </group>
    <input ref="/sdepart/store_gps">
      <label>GPS Coordinates</label>
      <hint>GPS coordinates can only be collected when outside.</hint>
    </input>
  </h:body>
</h:html>
