<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Arrival</h:title>
    <model>
      <instance>
        <sarrive id="sarrive">
          <start/>
          <end/>
          <deviceid/>
          <simserial/>
          <rider/>
          <region/>
          <facility/>
          <stid_repeat jr:template="">
            <stid/>
            <stype/>
            <condition/>
          </stid_repeat>
          <store_gps/>
          <meta>
            <instanceID/>
          </meta>
        </sarrive>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/sarrive/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/sarrive/end" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/sarrive/deviceid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="simserial" nodeset="/sarrive/simserial" type="string"/>
      <bind nodeset="/sarrive/rider" required="true()" type="select1"/>
      <bind nodeset="/sarrive/region" required="true()" type="select1"/>
      <bind nodeset="/sarrive/facility" required="true()" type="select1"/>
      <bind nodeset="/sarrive/stid_repeat/stid" required="true()" type="barcode"/>
      <bind nodeset="/sarrive/stid_repeat/stype" required="true()" type="select1"/>
      <bind nodeset="/sarrive/stid_repeat/condition" required="true()" type="select1"/>
      <bind nodeset="/sarrive/store_gps" required="true()" type="geopoint"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/sarrive/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 appearance="quick search('riders')" ref="/sarrive/rider">
      <label>Rider Name</label>
      <item>
        <label>rider</label>
        <value>rider_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('regions')" ref="/sarrive/region">
      <label>Region</label>
      <item>
        <label>region</label>
        <value>region_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('facilities', 'matches', 'region',  /sarrive/region )" ref="/sarrive/facility">
      <label>Facility</label>
      <item>
        <label>facility</label>
        <value>facility_key</value>
      </item>
    </select1>
    <group ref="/sarrive/stid_repeat">
      <label>New Sample</label>
      <repeat nodeset="/sarrive/stid_repeat">
        <input ref="/sarrive/stid_repeat/stid">
          <label>STT Barcode</label>
        </input>
        <select1 appearance="quick search('stypes')" ref="/sarrive/stid_repeat/stype">
          <label>Specimen Type</label>
          <item>
            <label>stype</label>
            <value>stype_key</value>
          </item>
        </select1>
        <select1 appearance="quick search('conditions')" ref="/sarrive/stid_repeat/condition">
          <label>Specimen Condition</label>
          <item>
            <label>cond</label>
            <value>cond_key</value>
          </item>
        </select1>
      </repeat>
    </group>
    <input ref="/sarrive/store_gps">
      <label>GPS Coordinates</label>
      <hint>GPS coordinates can only be collected when outside.</hint>
    </input>
  </h:body>
</h:html>
