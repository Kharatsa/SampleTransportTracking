<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Results Pickup</h:title>
    <model>
      <instance>
        <result id="result">
          <start/>
          <end/>
          <deviceid/>
          <simserial/>
          <rider/>
          <region/>
          <facility/>
          <stid_repeat jr:template="">
            <labid/>
          </stid_repeat>
          <store_gps/>
          <meta>
            <instanceID/>
          </meta>
        </result>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/result/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/result/end" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/result/deviceid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="simserial" nodeset="/result/simserial" type="string"/>
      <bind nodeset="/result/rider" required="true()" type="select1"/>
      <bind nodeset="/result/region" required="true()" type="select1"/>
      <bind nodeset="/result/facility" required="true()" type="select1"/>
      <bind nodeset="/result/stid_repeat/labid" required="true()" type="barcode"/>
      <bind nodeset="/result/store_gps" required="true()" type="geopoint"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/result/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 appearance="quick search('riders')" ref="/result/rider">
      <label>Rider Name</label>
      <item>
        <label>rider</label>
        <value>rider_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('regions')" ref="/result/region">
      <label>Region</label>
      <item>
        <label>region</label>
        <value>region_key</value>
      </item>
    </select1>
    <select1 appearance="quick search('facilities', 'matches', 'region',  /result/region )" ref="/result/facility">
      <label>Facility</label>
      <item>
        <label>facility</label>
        <value>facility_key</value>
      </item>
    </select1>
    <group ref="/result/stid_repeat">
      <label>New</label>
      <repeat nodeset="/result/stid_repeat">
        <input ref="/result/stid_repeat/labid">
          <label>Lab Barcode</label>
        </input>
      </repeat>
    </group>
    <input ref="/result/store_gps">
      <label>GPS Coordinates</label>
      <hint>GPS coordinates can only be collected when outside.</hint>
    </input>
  </h:body>
</h:html>
